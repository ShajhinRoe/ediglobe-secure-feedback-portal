# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ediglobe-feedback
DATABASE_NAME=ediglobe-feedback

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_change_in_production
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CLIENT_URL=http://localhost:3000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@ediglobe.com

# Admin Configuration
ADMIN_EMAIL=admin@ediglobe.com
ADMIN_PASSWORD=admin123

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1
